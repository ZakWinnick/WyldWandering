---
import Layout from '../../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;

// Blog posts data - in production, this would come from content collections
const blogPosts = [
  {
    slug: 'sample-post',
    title: 'The Art of Adventure Travel Without Roughing It',
    excerpt: 'Discover how to experience authentic adventures while maintaining the comfort and quality you deserve. From boutique lodges to curated experiences.',
    date: '2025-01-10',
    readingTime: '5 min read',
    image: 'https://images.unsplash.com/photo-1501555088652-021faa106b9b?auto=format&fit=crop&w=800&q=80',
    category: 'Travel Philosophy',
  },
  {
    slug: 'patagonia-guide',
    title: 'A Complete Guide to Patagonia: Timing, Trails, and Tips',
    excerpt: 'Everything you need to know about planning your Patagonia adventure. When to go, what to pack, and the experiences you cannot miss.',
    date: '2024-12-15',
    readingTime: '8 min read',
    image: 'https://images.unsplash.com/photo-1531761535209-180857e963b9?auto=format&fit=crop&w=800&q=80',
    category: 'Destination Guide',
  },
  {
    slug: 'sustainable-travel-tips',
    title: '10 Ways to Travel More Sustainably in 2025',
    excerpt: 'Practical tips for reducing your environmental footprint while still having incredible travel experiences. Small changes, big impact.',
    date: '2024-11-28',
    readingTime: '6 min read',
    image: 'https://images.unsplash.com/photo-1542601906990-b4d3fb778b09?auto=format&fit=crop&w=800&q=80',
    category: 'Travel Tips',
  },
  {
    slug: 'northern-california-hidden-gems',
    title: 'Hidden Gems of Northern California: Local Favorites',
    excerpt: 'As a Northern California native, I share my favorite lesser-known spots for adventure seekers looking to explore closer to home.',
    date: '2024-11-10',
    readingTime: '7 min read',
    image: 'https://images.unsplash.com/photo-1449034446853-66c86144b0ad?auto=format&fit=crop&w=800&q=80',
    category: 'Local Insights',
  },
];

// Helper function to format dates
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout
  title="Journal"
  description="Travel tips, destination guides, and adventure inspiration from Wyld Wandering. Expert insights for those who want to explore with comfort."
>
  <!-- Hero Section -->
  <section class="blog-hero">
    <div class="container-wide section-padding">
      <div class="hero-content">
        <span class="hero-label">The Wyld Wandering Blog</span>
        <h1 class="hero-title">Journal</h1>
        <p class="hero-description">
          Stories from the trail and beyond. Destination guides, travel wisdom, and thoughts on exploring the world with intention and comfort.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="blog-grid-section">
    <div class="container-wide section-padding">
      <!-- Featured Post -->
      <div class="featured-post">
        <a href={`${baseUrl}blog/${blogPosts[0].slug}`} class="featured-link">
          <div class="featured-image-container">
            <div class="featured-gradient-placeholder"></div>
            <img
              src={blogPosts[0].image}
              alt={blogPosts[0].title}
              class="featured-image"
              loading="lazy"
            />
            <div class="featured-badge">Featured</div>
          </div>
          <div class="featured-content">
            <span class="post-category">{blogPosts[0].category}</span>
            <h2 class="featured-title">{blogPosts[0].title}</h2>
            <p class="featured-excerpt">{blogPosts[0].excerpt}</p>
            <div class="post-meta">
              <time datetime={blogPosts[0].date}>{formatDate(blogPosts[0].date)}</time>
              <span class="meta-divider"></span>
              <span>{blogPosts[0].readingTime}</span>
            </div>
            <span class="read-more">
              Read Article
              <svg class="read-more-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>
      </div>

      <!-- Divider -->
      <div class="section-divider"></div>

      <!-- Recent Posts Grid -->
      <div class="recent-posts">
        <h3 class="section-title">Recent Posts</h3>
        <div class="posts-grid">
          {blogPosts.slice(1).map((post) => (
            <a href={`${baseUrl}blog/${post.slug}`} class="card post-card">
              <div class="card-image-container">
                <div class="card-gradient-placeholder"></div>
                <img
                  src={post.image}
                  alt={post.title}
                  class="card-image"
                  loading="lazy"
                />
              </div>
              <div class="card-content">
                <span class="post-category">{post.category}</span>
                <h4 class="card-title">{post.title}</h4>
                <p class="card-excerpt">{post.excerpt}</p>
                <div class="post-meta">
                  <time datetime={post.date}>{formatDate(post.date)}</time>
                  <span class="meta-divider"></span>
                  <span>{post.readingTime}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Newsletter CTA -->
      <div class="newsletter-cta">
        <h3 class="newsletter-title">Stay in the Loop</h3>
        <p class="newsletter-description">
          Get travel inspiration, destination spotlights, and exclusive tips delivered straight to your inbox.
        </p>
        <form class="newsletter-form">
          <input
            type="email"
            placeholder="Your email address"
            class="newsletter-input"
          />
          <button type="submit" class="btn-primary">Subscribe</button>
        </form>
        <p class="newsletter-disclaimer">No spam, ever. Unsubscribe anytime.</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .blog-hero {
    background: var(--bg-secondary);
    position: relative;
    overflow: hidden;
  }

  .blog-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, transparent 0%, rgba(0, 0, 0, 0.03) 100%);
    pointer-events: none;
  }

  .hero-content {
    max-width: 48rem;
    padding: 4rem 0;
  }

  @media (min-width: 1024px) {
    .hero-content {
      padding: 6rem 0;
    }
  }

  .hero-label {
    display: block;
    color: var(--accent);
    font-family: 'Outfit', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .hero-title {
    font-family: 'Cormorant', serif;
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.1;
    margin: 0;
  }

  .hero-description {
    font-family: 'Outfit', sans-serif;
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-top: 1.5rem;
    max-width: 36rem;
  }

  /* Blog Grid Section */
  .blog-grid-section {
    background: var(--bg-primary);
  }

  /* Featured Post */
  .featured-post {
    margin-bottom: 4rem;
  }

  .featured-link {
    display: grid;
    gap: 2rem;
    text-decoration: none;
    color: inherit;
  }

  @media (min-width: 1024px) {
    .featured-link {
      grid-template-columns: 1fr 1fr;
      align-items: center;
    }
  }

  .featured-image-container {
    position: relative;
    aspect-ratio: 4 / 3;
    border-radius: 1rem;
    overflow: hidden;
  }

  .featured-gradient-placeholder {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--accent) 0%, var(--bg-secondary) 100%);
  }

  .featured-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-link:hover .featured-image {
    transform: scale(1.05);
  }

  .featured-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--accent);
    color: var(--bg-primary);
    padding: 0.375rem 0.875rem;
    border-radius: 2rem;
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-content {
    padding: 0;
  }

  @media (min-width: 1024px) {
    .featured-content {
      padding-left: 2rem;
    }
  }

  .post-category {
    display: inline-block;
    color: var(--accent);
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .featured-title {
    font-family: 'Cormorant', serif;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.2;
    margin: 0.75rem 0 0 0;
    transition: color 0.3s ease;
  }

  .featured-link:hover .featured-title {
    color: var(--accent);
  }

  .featured-excerpt {
    font-family: 'Outfit', sans-serif;
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-top: 1rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
    font-family: 'Outfit', sans-serif;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .meta-divider {
    width: 4px;
    height: 4px;
    background: var(--border);
    border-radius: 50%;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    margin-top: 1.5rem;
    font-family: 'Outfit', sans-serif;
    font-weight: 500;
    color: var(--accent);
    transition: color 0.3s ease;
  }

  .featured-link:hover .read-more {
    color: var(--text-primary);
  }

  .read-more-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
    transition: transform 0.3s ease;
  }

  .featured-link:hover .read-more-icon {
    transform: translateX(4px);
  }

  /* Section Divider */
  .section-divider {
    height: 1px;
    background: var(--border);
    margin-bottom: 3rem;
  }

  /* Recent Posts */
  .section-title {
    font-family: 'Cormorant', serif;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 2rem 0;
  }

  .posts-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .post-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: var(--bg-secondary);
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
  }

  .card-image-container {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .card-gradient-placeholder {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--accent) 0%, var(--bg-secondary) 100%);
  }

  .card-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-card:hover .card-image {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-title {
    font-family: 'Cormorant', serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
    margin: 0.5rem 0 0 0;
    transition: color 0.3s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card:hover .card-title {
    color: var(--accent);
  }

  .card-excerpt {
    font-family: 'Outfit', sans-serif;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-top: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-content .post-meta {
    margin-top: 1rem;
    font-size: 0.8125rem;
  }

  /* Newsletter CTA */
  .newsletter-cta {
    margin-top: 5rem;
    padding: 3rem 2rem;
    background: var(--bg-secondary);
    border-radius: 1.5rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .newsletter-cta {
      padding: 4rem 3rem;
    }
  }

  .newsletter-title {
    font-family: 'Cormorant', serif;
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .newsletter-description {
    font-family: 'Outfit', sans-serif;
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 1rem auto 0;
    max-width: 32rem;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    max-width: 28rem;
    margin: 2rem auto 0;
  }

  @media (min-width: 640px) {
    .newsletter-form {
      flex-direction: row;
    }
  }

  .newsletter-input {
    flex: 1;
    padding: 0.875rem 1rem;
    font-family: 'Outfit', sans-serif;
    font-size: 1rem;
    color: var(--text-primary);
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    outline: none;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: var(--text-secondary);
  }

  .newsletter-input:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(var(--accent-rgb, 180, 100, 80), 0.1);
  }

  .newsletter-disclaimer {
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-top: 1rem;
  }
</style>
