---
import Layout from '../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;

const destinationCategories = [
  {
    title: 'California & Pacific Coast',
    description: 'Towering Redwoods, dramatic Big Sur cliffs, and rugged coastal trails. Experience the best of the Golden State from behind the wheel.',
    highlights: ['Redwood National Park', 'Big Sur Highway 1', 'Lost Coast Trail', 'Point Reyes'],
    gradientLight: 'bg-gradient-to-br from-emerald-700 via-amber-700 to-orange-400',
    gradientDark: 'dark:from-emerald-800 dark:via-amber-800 dark:to-orange-500',
  },
  {
    title: 'Desert Southwest',
    description: 'Vast canyons, red rock formations, and endless desert skies. Utah and Arizona offer some of the most dramatic overlanding terrain in the world.',
    highlights: ['Moab & Canyonlands', 'Monument Valley', 'Sedona Trails', 'White Pocket'],
    gradientLight: 'bg-gradient-to-br from-orange-500 via-amber-400 to-yellow-200',
    gradientDark: 'dark:from-orange-600 dark:via-amber-500 dark:to-yellow-300',
  },
  {
    title: 'Pacific Northwest',
    description: 'Lush rainforests, volcanic peaks, and pristine wilderness. Oregon and Washington deliver adventure seekers unforgettable landscapes.',
    highlights: ['Olympic Peninsula', 'Cascade Range', 'Oregon Coast', 'Mount Rainier'],
    gradientLight: 'bg-gradient-to-br from-green-900 via-emerald-700 to-green-500',
    gradientDark: 'dark:from-green-950 dark:via-emerald-800 dark:to-green-600',
  },
  {
    title: 'Mountain West',
    description: 'Alpine meadows, rugged mountain passes, and wide-open spaces. Colorado and Montana are calling for your next high-altitude adventure.',
    highlights: ['Rocky Mountain NP', 'Glacier National Park', 'San Juan Mountains', 'Beartooth Highway'],
    gradientLight: 'bg-gradient-to-br from-slate-700 via-slate-500 to-slate-400',
    gradientDark: 'dark:from-slate-800 dark:via-slate-600 dark:to-slate-500',
  },
  {
    title: 'International Adventures',
    description: 'For those ready to explore beyond borders. From volcanic landscapes to glacial fjords, the world awaits.',
    highlights: ['Iceland Ring Road', 'New Zealand South Island', 'Patagonia', 'Scottish Highlands'],
    gradientLight: 'bg-gradient-to-br from-emerald-800 via-green-900 to-green-950',
    gradientDark: 'dark:from-emerald-900 dark:via-green-950 dark:to-black',
  },
  {
    title: 'Luxury Wilderness',
    description: 'Adventure meets comfort. Glamping retreats and upscale outdoor experiences for those who want nature without sacrificing amenities.',
    highlights: ['Under Canvas Resorts', 'Safari-style Camps', 'Treehouse Retreats', 'Desert Glamping'],
    gradientLight: 'bg-gradient-to-br from-amber-400 via-yellow-500 to-amber-200',
    gradientDark: 'dark:from-amber-500 dark:via-yellow-600 dark:to-amber-300',
  },
];

const featuredTrips = [
  {
    name: 'Redwood Coast Explorer',
    duration: '5 Days',
    category: 'California & Pacific Coast',
    description: 'Wind through ancient Redwood groves, camp along the rugged Mendocino coast, and discover hidden coastal gems.',
    gradientLight: 'bg-gradient-to-br from-emerald-700 to-green-500',
    gradientDark: 'dark:from-emerald-800 dark:to-green-600',
  },
  {
    name: 'Utah Canyonlands Overland',
    duration: '7 Days',
    category: 'Desert Southwest',
    description: 'An epic journey through Moab, Canyonlands, and Capitol Reef with carefully selected campsites and off-road trails.',
    gradientLight: 'bg-gradient-to-br from-orange-500 to-amber-700',
    gradientDark: 'dark:from-orange-600 dark:to-amber-800',
  },
  {
    name: 'Iceland Highlands Circuit',
    duration: '10 Days',
    category: 'International Adventures',
    description: 'Traverse the legendary F-roads, soak in hot springs, and witness otherworldly volcanic landscapes.',
    gradientLight: 'bg-gradient-to-br from-slate-700 to-slate-500',
    gradientDark: 'dark:from-slate-800 dark:to-slate-600',
  },
  {
    name: 'Pacific Northwest Grand Loop',
    duration: '8 Days',
    category: 'Pacific Northwest',
    description: 'From Olympic rainforests to Cascade volcanoes, experience the full range of PNW wilderness.',
    gradientLight: 'bg-gradient-to-br from-green-900 to-emerald-700',
    gradientDark: 'dark:from-green-950 dark:to-emerald-800',
  },
];
---

<Layout title="Destinations" description="Explore our curated adventure destinations - from California Redwoods to international overlanding expeditions. Find your next adventure with Wyld Wandering.">
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center bg-charcoal-900">
    <div class="absolute inset-0 bg-gradient-to-br from-charcoal-900 via-forest-900 to-charcoal-800"></div>
    <div class="relative z-10 w-full max-w-7xl mx-auto px-6 py-32 lg:px-8">
      <div class="max-w-4xl">
        <span class="inline-block font-sans text-sm font-medium tracking-widest uppercase text-terracotta-400 mb-8">
          Where Will You Wander?
        </span>
        <h1 class="font-display text-5xl md:text-6xl lg:text-7xl text-cream-50 leading-[0.95] mb-8">
          Curated<br/>
          <span class="italic text-terracotta-400">Destinations</span><br/>
          for the Adventurous Soul
        </h1>
        <p class="font-sans text-xl leading-relaxed text-cream-200 max-w-2xl mb-12">
          From Northern California's towering Redwoods to international overlanding expeditions, every journey is crafted with care and expertise.
        </p>
        <div class="flex flex-wrap gap-6 items-center">
          <a href="/contact" class="inline-flex items-center px-8 py-4 bg-terracotta-500 text-white font-medium text-sm uppercase tracking-wide hover:bg-terracotta-600 transition-colors">
            Plan Your Adventure
          </a>
          <a href="#destinations" class="inline-flex items-center px-8 py-4 border-2 border-cream-200 text-cream-200 font-medium text-sm uppercase tracking-wide hover:bg-cream-200 hover:text-charcoal-900 transition-colors">
            Explore Destinations
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Destination Categories Grid -->
  <section id="destinations" class="py-24 lg:py-32 bg-cream-50 dark:bg-forest-900">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <header class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block font-sans text-xs font-semibold tracking-[0.2em] uppercase text-terracotta-500 dark:text-amber-400 mb-4">
          Explore By Region
        </span>
        <h2 class="font-serif text-4xl md:text-5xl font-medium leading-tight text-charcoal-900 dark:text-cream-50 mb-4">
          Destination Categories
        </h2>
        <p class="font-sans text-lg leading-relaxed text-charcoal-600 dark:text-cream-200">
          Whether you're drawn to desert landscapes, coastal trails, or international expeditions, we specialize in creating unforgettable adventure experiences.
        </p>
      </header>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {destinationCategories.map((dest) => (
          <article class="group bg-cream-100 dark:bg-forest-950 overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class={`relative h-56 flex items-end p-6 ${dest.gradientLight} ${dest.gradientDark}`}>
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
              <h3 class="relative z-10 font-serif text-2xl font-semibold text-white drop-shadow-lg">
                {dest.title}
              </h3>
            </div>
            <div class="p-6">
              <p class="font-sans text-base leading-relaxed text-charcoal-600 dark:text-cream-200 mb-5">
                {dest.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {dest.highlights.map((highlight) => (
                  <span class="font-sans text-xs font-medium px-3 py-1.5 bg-cream-50 dark:bg-forest-900 text-charcoal-600 dark:text-cream-200 border border-charcoal-200 dark:border-forest-800 group-hover:border-terracotta-500 group-hover:text-terracotta-500 dark:group-hover:border-amber-400 dark:group-hover:text-amber-400 transition-colors duration-300">
                    {highlight}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Trips Section -->
  <section class="py-24 lg:py-32 bg-cream-100 dark:bg-forest-950">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <header class="text-center max-w-3xl mx-auto mb-16">
        <span class="inline-block font-sans text-xs font-semibold tracking-[0.2em] uppercase text-terracotta-500 dark:text-amber-400 mb-4">
          Signature Experiences
        </span>
        <h2 class="font-serif text-4xl md:text-5xl font-medium leading-tight text-charcoal-900 dark:text-cream-50 mb-4">
          Featured Trips & Experiences
        </h2>
        <p class="font-sans text-lg leading-relaxed text-charcoal-600 dark:text-cream-200">
          These carefully curated itineraries showcase what adventure with comfort truly means. Each trip is fully customizable to your preferences.
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {featuredTrips.map((trip) => (
          <article class="group flex flex-col md:flex-row bg-cream-50 dark:bg-forest-900 overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class={`relative min-h-[180px] md:w-2/5 flex-shrink-0 ${trip.gradientLight} ${trip.gradientDark}`}>
              <div class="absolute inset-0 bg-black/10"></div>
              <span class="absolute top-4 left-4 font-sans text-xs font-semibold tracking-wide px-4 py-2 bg-cream-50 dark:bg-forest-950 text-charcoal-900 dark:text-cream-50">
                {trip.duration}
              </span>
            </div>
            <div class="flex-1 p-6 flex flex-col justify-center">
              <span class="font-sans text-[11px] font-semibold tracking-[0.15em] uppercase text-terracotta-500 dark:text-amber-400 mb-2">
                {trip.category}
              </span>
              <h3 class="font-serif text-2xl font-semibold text-charcoal-900 dark:text-cream-50 mb-3 group-hover:text-terracotta-500 dark:group-hover:text-amber-400 transition-colors duration-300">
                {trip.name}
              </h3>
              <p class="font-sans text-base leading-relaxed text-charcoal-600 dark:text-cream-200">
                {trip.description}
              </p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 lg:py-32 bg-cream-50 dark:bg-forest-900">
    <div class="max-w-3xl mx-auto px-6 lg:px-8 text-center">
      <span class="inline-block font-sans text-xs font-semibold tracking-[0.2em] uppercase text-terracotta-500 dark:text-amber-400 mb-4">
        Dream Bigger
      </span>
      <h2 class="font-serif text-4xl md:text-5xl font-medium leading-tight text-charcoal-900 dark:text-cream-50 mb-6">
        Not Seeing Your Dream Destination?
      </h2>
      <p class="font-sans text-lg leading-relaxed text-charcoal-600 dark:text-cream-200 max-w-2xl mx-auto mb-10">
        These are just a few of the adventures we can create together. Whether it's a hidden gem you've discovered or a bucket-list expedition, let's make it happen.
      </p>
      <div class="flex flex-wrap gap-6 justify-center items-center mb-8">
        <a href={`${baseUrl}contact`} class="inline-flex items-center px-8 py-4 font-sans font-semibold text-sm tracking-wide uppercase bg-terracotta-500 text-white hover:bg-terracotta-600 dark:bg-amber-400 dark:text-charcoal-900 dark:hover:bg-amber-500 transition-colors duration-300">
          Start the Conversation
        </a>
        <a href={`${baseUrl}services`} class="inline-flex items-center px-8 py-4 font-sans font-semibold text-sm tracking-wide uppercase border-2 border-charcoal-900 text-charcoal-900 hover:bg-charcoal-900 hover:text-cream-50 dark:border-cream-50 dark:text-cream-50 dark:hover:bg-cream-50 dark:hover:text-charcoal-900 transition-colors duration-300">
          View Our Services
        </a>
      </div>
      <p class="font-sans text-sm text-charcoal-600 dark:text-cream-200">
        Free initial consultation to discuss your adventure goals
      </p>
    </div>
  </section>
</Layout>
