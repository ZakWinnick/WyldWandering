---
import Layout from '../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;

const destinationCategories = [
  {
    title: 'California & Pacific Coast',
    description: 'Towering Redwoods, dramatic Big Sur cliffs, and rugged coastal trails. Experience the best of the Golden State from behind the wheel.',
    highlights: ['Redwood National Park', 'Big Sur Highway 1', 'Lost Coast Trail', 'Point Reyes'],
    gradient: 'linear-gradient(135deg, #2d5a4a 0%, #8b5a3c 50%, #c17f59 100%)',
  },
  {
    title: 'Desert Southwest',
    description: 'Vast canyons, red rock formations, and endless desert skies. Utah and Arizona offer some of the most dramatic overlanding terrain in the world.',
    highlights: ['Moab & Canyonlands', 'Monument Valley', 'Sedona Trails', 'White Pocket'],
    gradient: 'linear-gradient(135deg, #c17f59 0%, #d4a574 50%, #e8c9a0 100%)',
  },
  {
    title: 'Pacific Northwest',
    description: 'Lush rainforests, volcanic peaks, and pristine wilderness. Oregon and Washington deliver adventure seekers unforgettable landscapes.',
    highlights: ['Olympic Peninsula', 'Cascade Range', 'Oregon Coast', 'Mount Rainier'],
    gradient: 'linear-gradient(135deg, #1a3a2f 0%, #2d5a4a 50%, #3d7a5a 100%)',
  },
  {
    title: 'Mountain West',
    description: 'Alpine meadows, rugged mountain passes, and wide-open spaces. Colorado and Montana are calling for your next high-altitude adventure.',
    highlights: ['Rocky Mountain NP', 'Glacier National Park', 'San Juan Mountains', 'Beartooth Highway'],
    gradient: 'linear-gradient(135deg, #3d3d3d 0%, #5a5a5a 50%, #8b8b8b 100%)',
  },
  {
    title: 'International Adventures',
    description: 'For those ready to explore beyond borders. From volcanic landscapes to glacial fjords, the world awaits.',
    highlights: ['Iceland Ring Road', 'New Zealand South Island', 'Patagonia', 'Scottish Highlands'],
    gradient: 'linear-gradient(135deg, #2d5a4a 0%, #1a3a2f 50%, #0f2a1f 100%)',
  },
  {
    title: 'Luxury Wilderness',
    description: 'Adventure meets comfort. Glamping retreats and upscale outdoor experiences for those who want nature without sacrificing amenities.',
    highlights: ['Under Canvas Resorts', 'Safari-style Camps', 'Treehouse Retreats', 'Desert Glamping'],
    gradient: 'linear-gradient(135deg, #d4a574 0%, #c9a227 50%, #e8c9a0 100%)',
  },
];

const featuredTrips = [
  {
    name: 'Redwood Coast Explorer',
    duration: '5 Days',
    category: 'California & Pacific Coast',
    description: 'Wind through ancient Redwood groves, camp along the rugged Mendocino coast, and discover hidden coastal gems.',
    gradient: 'linear-gradient(135deg, #2d5a4a 0%, #3d7a5a 100%)',
  },
  {
    name: 'Utah Canyonlands Overland',
    duration: '7 Days',
    category: 'Desert Southwest',
    description: 'An epic journey through Moab, Canyonlands, and Capitol Reef with carefully selected campsites and off-road trails.',
    gradient: 'linear-gradient(135deg, #c17f59 0%, #8b5a3c 100%)',
  },
  {
    name: 'Iceland Highlands Circuit',
    duration: '10 Days',
    category: 'International Adventures',
    description: 'Traverse the legendary F-roads, soak in hot springs, and witness otherworldly volcanic landscapes.',
    gradient: 'linear-gradient(135deg, #3d3d3d 0%, #5a5a5a 100%)',
  },
  {
    name: 'Pacific Northwest Grand Loop',
    duration: '8 Days',
    category: 'Pacific Northwest',
    description: 'From Olympic rainforests to Cascade volcanoes, experience the full range of PNW wilderness.',
    gradient: 'linear-gradient(135deg, #1a3a2f 0%, #2d5a4a 100%)',
  },
];
---

<Layout title="Destinations" description="Explore our curated adventure destinations - from California Redwoods to international overlanding expeditions. Find your next adventure with Wyld Wandering.">
  <!-- Dramatic Hero Section -->
  <section class="hero-section">
    <div class="hero-content container-wide section-padding">
      <div class="hero-text">
        <span class="hero-label">Where Will You Wander?</span>
        <h1 class="hero-title">
          <span class="hero-title-line">Curated</span>
          <span class="hero-title-line hero-title-accent">Destinations</span>
          <span class="hero-title-line">for the</span>
          <span class="hero-title-line">Adventurous Soul</span>
        </h1>
        <p class="hero-description">
          From Northern California's towering Redwoods to international overlanding expeditions, every journey is crafted with care and expertise.
        </p>
        <div class="hero-actions">
          <a href={`${baseUrl}contact`} class="btn-primary">Plan Your Adventure</a>
          <a href="#destinations" class="btn-secondary">Explore Destinations</a>
        </div>
      </div>
    </div>
    <div class="hero-decoration"></div>
  </section>

  <!-- Destination Categories Grid -->
  <section id="destinations" class="destinations-section section-padding">
    <div class="container-wide">
      <header class="section-header">
        <span class="section-label">Explore By Region</span>
        <h2 class="section-title">Destination Categories</h2>
        <p class="section-description">
          Whether you're drawn to desert landscapes, coastal trails, or international expeditions, we specialize in creating unforgettable adventure experiences.
        </p>
      </header>

      <div class="destinations-grid">
        {destinationCategories.map((dest, index) => (
          <article class="destination-card card hover-lift" style={`--stagger: ${index}`}>
            <div class="destination-image" style={`background: ${dest.gradient};`}>
              <div class="destination-image-overlay"></div>
              <h3 class="destination-title">{dest.title}</h3>
            </div>
            <div class="destination-content">
              <p class="destination-description">{dest.description}</p>
              <div class="destination-highlights">
                {dest.highlights.map((highlight) => (
                  <span class="highlight-tag">{highlight}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Trips Section -->
  <section class="featured-section section-padding">
    <div class="container-wide">
      <header class="section-header">
        <span class="section-label">Signature Experiences</span>
        <h2 class="section-title">Featured Trips & Experiences</h2>
        <p class="section-description">
          These carefully curated itineraries showcase what adventure with comfort truly means. Each trip is fully customizable to your preferences.
        </p>
      </header>

      <div class="featured-grid">
        {featuredTrips.map((trip, index) => (
          <article class="featured-card card hover-lift" style={`--stagger: ${index}`}>
            <div class="featured-image" style={`background: ${trip.gradient};`}>
              <div class="featured-image-overlay"></div>
              <span class="featured-duration">{trip.duration}</span>
            </div>
            <div class="featured-content">
              <span class="featured-category">{trip.category}</span>
              <h3 class="featured-name">{trip.name}</h3>
              <p class="featured-description">{trip.description}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Custom Destinations CTA -->
  <section class="cta-section section-padding">
    <div class="container-narrow">
      <div class="cta-content">
        <span class="cta-label">Dream Bigger</span>
        <h2 class="cta-title">Not Seeing Your Dream Destination?</h2>
        <p class="cta-description">
          These are just a few of the adventures we can create together. Whether it's a hidden gem you've discovered or a bucket-list expedition, let's make it happen.
        </p>
        <div class="cta-actions">
          <a href={`${baseUrl}contact`} class="btn-primary">Start the Conversation</a>
          <a href={`${baseUrl}services`} class="btn-secondary">View Our Services</a>
        </div>
        <p class="cta-note">Free initial consultation to discuss your adventure goals</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    background-color: var(--bg-secondary);
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
  }

  .hero-text {
    max-width: 900px;
  }

  .hero-label {
    display: inline-block;
    font-family: 'Outfit', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 2rem;
  }

  .hero-title {
    margin-bottom: 2rem;
  }

  .hero-title-line {
    display: block;
    font-family: 'Cormorant', serif;
    font-size: clamp(3rem, 10vw, 7rem);
    font-weight: 500;
    line-height: 1;
    letter-spacing: -0.02em;
    color: var(--text-primary);
  }

  .hero-title-accent {
    color: var(--accent);
    font-style: italic;
  }

  .hero-description {
    font-family: 'Outfit', sans-serif;
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 600px;
    margin-bottom: 3rem;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
  }

  .hero-decoration {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 40%;
    background: linear-gradient(135deg, var(--accent) 0%, transparent 60%);
    opacity: 0.08;
    z-index: 1;
  }

  /* Section Styles */
  .destinations-section {
    background-color: var(--bg-primary);
  }

  .featured-section {
    background-color: var(--bg-secondary);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .section-label {
    display: inline-block;
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: 'Cormorant', serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 500;
    line-height: 1.1;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .section-description {
    font-family: 'Outfit', sans-serif;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  /* Destinations Grid */
  .destinations-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .destinations-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .destinations-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Destination Card */
  .destination-card {
    border-radius: 0;
  }

  .destination-image {
    position: relative;
    height: 220px;
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
  }

  .destination-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 60%);
  }

  .destination-title {
    position: relative;
    z-index: 1;
    font-family: 'Cormorant', serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .destination-content {
    padding: 1.5rem;
    background-color: var(--bg-secondary);
  }

  .destination-description {
    font-family: 'Outfit', sans-serif;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  .destination-highlights {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .highlight-tag {
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.375rem 0.75rem;
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    border: 1px solid var(--border);
    transition: all 0.3s ease;
  }

  .destination-card:hover .highlight-tag {
    border-color: var(--accent);
    color: var(--accent);
  }

  /* Featured Grid */
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Featured Card */
  .featured-card {
    display: flex;
    flex-direction: column;
    border-radius: 0;
  }

  @media (min-width: 768px) {
    .featured-card {
      flex-direction: row;
    }
  }

  .featured-image {
    position: relative;
    min-height: 180px;
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .featured-image {
      width: 40%;
    }
  }

  .featured-image-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.1);
  }

  .featured-duration {
    position: absolute;
    top: 1rem;
    left: 1rem;
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    padding: 0.5rem 1rem;
    background-color: var(--bg-primary);
    color: var(--text-primary);
  }

  .featured-content {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: var(--bg-secondary);
  }

  .featured-category {
    font-family: 'Outfit', sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 0.5rem;
  }

  .featured-name {
    font-family: 'Cormorant', serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    transition: color 0.3s ease;
  }

  .featured-card:hover .featured-name {
    color: var(--accent);
  }

  .featured-description {
    font-family: 'Outfit', sans-serif;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  /* CTA Section */
  .cta-section {
    background-color: var(--bg-tertiary);
  }

  .cta-content {
    text-align: center;
  }

  .cta-label {
    display: inline-block;
    font-family: 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 1rem;
  }

  .cta-title {
    font-family: 'Cormorant', serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    line-height: 1.1;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .cta-description {
    font-family: 'Outfit', sans-serif;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 2.5rem;
  }

  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
  }

  .cta-note {
    font-family: 'Outfit', sans-serif;
    font-size: 0.875rem;
    color: var(--text-muted);
  }
</style>
