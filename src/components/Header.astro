---
const baseUrl = import.meta.env.BASE_URL;
const navLinks = [
  { href: `${baseUrl}`, label: 'Home' },
  { href: `${baseUrl}about`, label: 'About' },
  { href: `${baseUrl}services`, label: 'Services' },
  { href: `${baseUrl}destinations`, label: 'Destinations' },
  { href: `${baseUrl}blog`, label: 'Blog' },
  { href: `${baseUrl}testimonials`, label: 'Testimonials' },
  { href: `${baseUrl}faq`, label: 'FAQ' },
  { href: `${baseUrl}contact`, label: 'Contact' },
];
---

<header class="sticky top-0 z-50 bg-stone-50/95 backdrop-blur-sm border-b border-stone-200">
  <nav class="container-wide section-padding !py-4 flex items-center justify-between">
    <a href={baseUrl} class="flex items-center gap-2">
      <span class="font-display text-2xl font-semibold text-sage-700">Wyld Wandering</span>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center gap-8">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-stone-600 hover:text-sage-600 transition-colors font-medium text-sm"
        >
          {link.label}
        </a>
      ))}
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-btn"
      class="lg:hidden p-2 text-stone-600 hover:text-sage-600"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden bg-stone-50 border-b border-stone-200">
    <div class="px-6 py-4 space-y-3">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="block text-stone-600 hover:text-sage-600 transition-colors font-medium py-2"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
